<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>BARANGER Emmanuel (3D/FDM), Brian GLADDEN (3D), John LICHTENBERGER (FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Velocity-XL/velocity-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/Velocity-XL/Sounds/velocity-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Velocity-XL/Models/velocity.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int">  0 </int>  <!-- 0 immat -->
        <int type="int">  0 </int>  <!-- 1 immat -->
        <int type="int">  0 </int>  <!-- 2 immat -->
        <int type="int">  0 </int>  <!-- 3 immat -->
        <int type="int">  0 </int>  <!-- 4 immat -->
        <int type="int">  0 </int>  <!-- 5 immat -->
        <int type="bool"> 0 </int>  <!-- 6 smoke -->
        <int type="int">  0 </int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Velocity-XL</title>
      <key>
        <name>Ctrl-b</name>
        <desc>Speed Brake</desc>
      </key>
      <line>______________________________________________</line>
    </help>

    <menubar include="Dialogs/velocity-menu.xml"/>

    <systems>
      <electrical>
        <path></path>
      </electrical>
    </systems>

    <instrumentation>
      <path>Aircraft/Velocity-XL/Nasal/instrumentation.xml</path>
    </instrumentation>

    <weight n="0">
      <name>Front Seats</name>
      <weight-lb>180</weight-lb> 
      <max-lb>360</max-lb>
      <min-lb>180</min-lb>
    </weight>

    <weight n="1">
      <name>Rear Seats/Cargo</name>
      <weight-lb>0</weight-lb> 
      <max-lb>420</max-lb>
      <min-lb>0</min-lb>      
    </weight>

  </sim>

  <controls>
    <engines>
      <engine>
        <mixture archive="y"> 0.65 </mixture>
      </engine>
    </engines>
    <electric>
      <battery-switch>1</battery-switch>
      <engine>
        <generator>1</generator>
      </engine>
    </electric>
    <lighting>
      <instrument-lights>1</instrument-lights>
    </lighting>
    <flight>
      <rudder-left type="float">0</rudder-left>
      <rudder-right type="float">0</rudder-right>
    </flight>
  </controls> 

  <instrumentation>
    <comm>
      <knob-25k type="bool">0</knob-25k>
    </comm>
    <nav>
      <rad-btn type="bool">0</rad-btn>
    </nav>
    <radar>
      <range type="int">40</range>
    </radar>
    <encoder>
        <serviceable type="bool">1</serviceable>
    </encoder>
  </instrumentation>

  <input>
    <keyboard include="Nasal/velocity-keyboard.xml"/>
  </input>

  <nasal>
    <doors>
      <file>Aircraft/Velocity-XL/Nasal/doors.nas</file>
    </doors>
    <velocity>
      <file>Aircraft/Velocity-XL/Nasal/light.nas</file>
      <file>Aircraft/Velocity-XL/Nasal/velocity.nas</file>
      <file>Aircraft/Velocity-XL/Nasal/liveries.nas</file>
      <file>Aircraft/Velocity-XL/Nasal/KNS80.nas</file>
      <file>Aircraft/Velocity-XL/Nasal/Electrical.nas</file>
      <file>Aircraft/Velocity-XL/Nasal/rudders.nas</file>
    </velocity>
    <systems>
      <file>Aircraft/Velocity-XL/Nasal/kln90b.nas</file>
    </systems>
    <king>
      <file>Aircraft/Velocity-XL/Models/Interior/Panel/Instruments/kfc150/kfc150.nas</file>
    </king>
  </nasal>

</PropertyList>

