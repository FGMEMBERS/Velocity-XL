 <animation> 
  <type>rotate</type>
  <object-name>PtrL</object-name>
  <object-name>PtrTipL</object-name>
  <property>consumables/fuel/tank[0]/level-gal_us</property>
  <interpolation>
   <entry><ind>0.0</ind><dep>-5.0</dep></entry>
   <entry><ind>40</ind><dep>90.0</dep></entry>
  </interpolation>
  <axis> 
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>0</x-m>
   <y-m>-0.02</y-m>
   <z-m>0</z-m>  
  </center>
 </animation>         
 
 <animation> 
  <type>rotate</type>
  <object-name>PtrR</object-name>
  <object-name>PtrTipR</object-name>
  <property>consumables/fuel/tank[1]/level-gal_us</property>
  <interpolation>
   <entry><ind>0.0</ind><dep>-5.0</dep></entry>
   <entry><ind>40.0</ind><dep>90.0</dep></entry>
  </interpolation>
  <axis> 
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>0</x-m>
   <y-m>0.02</y-m>
   <z-m>0</z-m>  
  </center>
 </animation>         
 
</PropertyList>