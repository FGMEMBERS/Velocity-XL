<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>siege1</object-name>
    <object-name>siege2</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Velocity-XL/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.565 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.100 </z-m>
    </offsets>
  </model>

  <!-- Pilot -->
  <model>
    <path>Aircraft/Velocity-XL/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.006 </x-m>
      <y-m> -0.309 </y-m>
      <z-m> -0.157 </z-m>
    </offsets>
  </model>

  <!-- Stick -->
  <model>
    <path>Aircraft/Velocity-XL/Models/Interior/Panel/Instruments/divers/stick.xml</path>
    <offsets>
      <x-m> -1.028 </x-m>
      <y-m> -0.042 </y-m>
      <z-m> -0.101 </z-m>
    </offsets>
  </model>
  
</PropertyList>

