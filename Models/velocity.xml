<?xml version="1.0"?>

<PropertyList>

  <path>velocity.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Velocity-XL/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>ailes2</object-name>
    <object-name>profondeur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axeA</object-name>
    <object-name>derives</object-name>
    <object-name>phares</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>

    <!-- Objets transparents -->
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>vitres</object-name>
    <object-name>lampe</object-name>
    <object-name>lampeG</object-name>
    <object-name>lampeD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>vitres</object-name>
    <object-name>lampe</object-name>
    <object-name>lampeG</object-name>
    <object-name>lampeD</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>ailes2</object-name>
    <object-name>profondeur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>directionG</object-name>
    <object-name>directionD</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axeA</object-name>
    <object-name>derives</object-name>
    <object-name>phares</object-name>
    <object-name>porteAG</object-name>
    <object-name>porteAD</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.rgb</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Velocity-XL/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.0 </x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Une ombre pour OSG -->
  <model>
    <name>shadowOSG</name>
    <path>Aircraft/Velocity-XL/Models/shadow.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>shadowOSG</object-name>
    <condition>
      <equals>
        <property>sim[0]/rendering/shadows-ai</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> 2.295 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.143 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>directionG</object-name>
    <property>controls/flight/rudder</property>
    <factor>30</factor>
    <axis>
      <x1-m>  2.594 </x1-m>
      <y1-m> -4.646 </y1-m>
      <z1-m>  0.033 </z1-m>
      <x2-m>  2.928 </x2-m>
      <y2-m> -4.646 </y2-m>
      <z2-m>  1.146 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>directionD</object-name>
    <property>controls/flight/rudder</property>
    <factor>30</factor>
    <axis>
      <x1-m> 2.594 </x1-m>
      <y1-m> 4.646 </y1-m>
      <z1-m> 0.033 </z1-m>
      <x2-m> 2.928 </x2-m>
      <y2-m> 4.646 </y2-m>
      <z2-m> 1.146 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/controls/flight/elevator</property>
    <factor>-20.0</factor>
    <center>
      <x-m> -1.877 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.019 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-20</factor>
    <axis>
      <x1-m>  1.911 </x1-m>
      <y1-m> -2.578 </y1-m>
      <z1-m> -0.081 </z1-m>
      <x2-m>  2.325 </x2-m>
      <y2-m> -3.938 </y2-m>
      <z2-m> -0.080 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-20</factor>
    <axis>
      <x1-m>  2.325 </x1-m>
      <y1-m>  3.938 </y1-m>
      <z1-m> -0.080 </z1-m>
      <x2-m>  1.911 </x2-m>
      <y2-m>  2.578 </y2-m>
      <z2-m> -0.081 </z2-m>
    </axis>
  </animation>

  <!-- Rentrée des roues -->
  <animation>
    <type>rotate</type>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.000 </ind>
        <dep> 94.000 </dep>
      </entry>
      <entry>
        <ind>  0.100 </ind>
        <dep> 94.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.869 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.455 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteAG</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind>   0.1 </ind>
        <dep> -130.0 </dep>
      </entry>
      <entry>
        <ind>   1.0 </ind>
        <dep> -130.0 </dep>
      </entry>
    </interpolation>
    <axis>
     <x1-m> -2.160 </x1-m>
     <y1-m> -0.158 </y1-m>
     <z1-m> -0.456 </z1-m>
     <x2-m> -1.957 </x2-m>
     <y2-m> -0.192 </y2-m>
     <z2-m> -0.4847 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteAD</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind>  0.1 </ind>
        <dep> 130.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 130.0 </dep>
      </entry>
    </interpolation>
    <axis>
     <x1-m> -2.160 </x1-m>
     <y1-m>  0.158 </y1-m>
     <z1-m> -0.456 </z1-m>
     <x2-m> -1.957 </x2-m>
     <y2-m>  0.192 </y2-m>
     <z2-m> -0.4847 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.000 </ind>
        <dep> 90.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m>  0.988 </x-m>
      <y-m> -0.581 </y-m>
      <z-m> -0.389 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
    <property>gear/gear[2]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.000 </ind>
        <dep> 90.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m>  0.988 </x-m>
      <y-m>  0.581 </y-m>
      <z-m> -0.389 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <property>controls/flight/rudder</property>
    <factor> 20.0 </factor>
    <center>
      <x-m> -1.869 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.455 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  0.000 </y>
      <z> -1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  0.899 </x-m>
      <y-m> -0.983 </y-m>
      <z-m> -1.010 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  0.899 </x-m>
      <y-m>  0.983 </y-m>
      <z-m> -1.010 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.118 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.100 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Essais d'ajout des effets lumineux d'après le G115 -->
  <model>
    <path>Aircraft/Velocity-XL/Models/lights/beacon.xml</path>
    <offsets>
      <x-m> 0.433 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.577 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Velocity-XL/Models/lights/RedLight.xml</path>
    <offsets>
      <x-m>  2.155 </x-m>
      <y-m> -4.684 </y-m>
      <z-m> -0.069 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Velocity-XL/Models/lights/GreenLight.xml</path>
    <offsets>
      <x-m>  2.155 </x-m>
      <y-m>  4.684 </y-m>
      <z-m> -0.069 </z-m>
    </offsets>
  </model>
  


</PropertyList>

